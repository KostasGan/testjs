{{outlet}}
<div class="login-box">
      <div class="login-logo">
        <a href=""><b>Ember</b>CLI</a>
      </div><!-- /.login-logo -->
      <div class="login-box-body">
        <p class="login-box-msg">Sign in to start your session</p>
        <form {{action 'check' on="submit"}}>
          <div class="form-group has-feedback">
            {{input value=email class="form-control" id="inputSuccess" placeholder="Email"}}
            <span class="glyphicon glyphicon-envelope form-control-feedback"></span>
          </div>
          <div class="form-group has-feedback">
            {{input type="password" value=pass class="form-control" placeholder="Password"}}
            <span class="glyphicon glyphicon-lock form-control-feedback"></span>
          </div>
          <div class="row">
            <div class="col-xs-8">
              {{#link-to 'register' }} <a class="text-center"> Register a new membership </a> {{/link-to}}
              <div id = "error">
              {{#if model.logged }}
                  <p class="text-red" > Wrong username or pass! </p> 
              {{/if}}
            </div> 
          </div><!-- /.col -->
                
            <div class="col-xs-4">
	            <button type="submit" class="btn btn-primary btn-block btn-flat">Sign In</button>
            </div><!-- /.col -->
          </div>
        </form>

      </div><!-- /.login-box-body -->
    </div><!-- /.login-box -->

