<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
      <h1>
        Libraries List
      </h1>
    </section>

    <div id='table'>
        <table class="table table-striped table-bordered">
          <thead>
            <tr>
              <th>ID</th>
              <th>Name</th>
              <th>Address</th>
              <th>Phone</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody>
            {{#each model as |library| }}
            <tr>
              <td>{{library.id}}</td>
              <td>{{library.name}}</td>
              <td>{{library.address}}</td>
              <td>{{library.phone}}</td>
              <td>
                {{#link-to 'libraries.edit' library.id class="btn btn-success btn-xs"}}Edit{{/link-to}}
                <button type="submit" class="btn btn-danger btn-xs"{{action 'deleteLibrary' library}}>Delete</button>
              </td>
            </tr>
            {{/each}}
          </tbody>
        </table>
    </div>
</div><!-- /.content-wrapper -->