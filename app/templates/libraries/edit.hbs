<div class="content-wrapper">
  <section class="content-header">
      <h1>
        Library Edit
      </h1>
  </section>
  <div>
    <div class="tab-pane" id="settings">
        <form {{action 'createLibrary' model on='submit' }}class="form-horizontal">
          <div class="form-group">
            <label for="inputName" class="col-sm-1 control-label">Name:</label>
            <div class="col-sm-5">
              {{input type="text" class="form-control " value=model.name placeholder="The name of the library"}}
            </div>
          </div>
          <div class="form-group">
              <label for="inputEmail" class="col-sm-1 control-label">Address:</label>
              <div class="col-sm-5">
                {{input type="text" class="form-control" value=model.address placeholder="The address of the Library"}}
              </div>
          </div>
          <div class="form-group">
            <label for="inputName" class="col-sm-1 control-label">Phone:</label>
            <div class="col-sm-5">
              {{input type="text" class="form-control" value=model.phone placeholder="The phone of the Library"}}
            </div>
          </div>
                   
          <div class="form-group">
            <div class="col-sm-offset-1 col-sm-12">
                <button type="submit" class="btn btn-danger">Save changes</button>
            </div>
          </div>
      </form>
    </div><!-- /.tab-pane -->               
  </div><!-- /.nav-tabs-custom --> 
</div><!-- /.content-wrapper -->
{{outlet}}
